{#
  reading(data)

  Provides basic reading output

  params:
   - data.address: the address of the reading, e.g. 'John 3:16'
   - data.text: the text of the reading
#}
{% macro reading(data) -%}
\subsubsection*{Read: {{ data.address }}}

{%- set vspace = joiner('\\vspace{4pt}\n\n') %}
\index{{ '{' }}{{ data.index }}}
{%- for paragraph in data.text -%}
{{ vspace() }}
{{ paragraph }}
{%- endfor %}
{%- endmacro %}

{% block body %}
{% block presong_readings %}
  {% for r in presong_readings %}
    {{ reading(r) }}
  {% endfor %}
{% endblock presong_readings %}

{%- if musicpages is defined %}
\subsubsection*{Sing one or more of the following}
\begin{itemize}
{% for musicname, musiclabel in musicpages.items() %}
\item {{ musicname }} (pg. \pageref{mus:{{ musiclabel }}})
{% endfor %}
\end{itemize}
%\vspace{8pt}
{%- endif %}

{%- if lordsprayer %}
\subsubsection*{Pray the following together}

\begin{quote} \itshape
  Our Father in Heaven: hallowed be your name.\\
  Your kingdom come, your will be done, on Earth as it is in Heaven.\\
  Give us this day our daily bread, and forgive us our trespasses,\\
  As we forgive those who trespass against us,\\
  And lead us not into temptation, but deliver us from evil,\\
  For yours is the kingdom, the power, and the glory forever and ever,\\
  Amen.
\end{quote}
{%- endif %}

{% block postsong_readings %}
  {% for r in postsong_readings %}
    {{ reading(r) }}
  {% endfor %}
{% endblock postsong_readings %}

\vspace{16pt} \noindent 
{% block prayer -%}
Let us pray:
\begin{quote} {{ prayer }} \end{quote}
Amen
{% endblock prayer %}

{% endblock body %}
